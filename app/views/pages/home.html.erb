<% if current_user %>
    <div class="following">
        <% current_user.following.each do |person| %>
            <!-- use person to fill in properties -->
            <!-- show the image of people current_user is following -->
        <% end %>
    </div>
<% end %>


<div>
    <% @posts.each do |p| %>
        <div class="post">
            <h4>
                <a href="<%= user_path(p.user.id) %>">
                    <div class="avatar">
                        <%= image_tag p.user.avatar.url(:thumb) %>
                    </div>
                </a>
            </h4>
            <h2 class="post-title">
                <a href="<%= post_path(p.id) %>">
                    <%= p.title %>
                </a>
            </h2>
            <div class="post-body">
                <%= p.content %>
            </div> <!-- .post-body -->
            <div class="post-meta">
                <a class="author" href="<%= user_path(p.user.id) %>"><%= p.user.name %></a>
                <br />
                published <%= time_ago_in_words(p.created_at) %>
            </div> <!-- .post-meta -->
        </div>
    <% end %>
</div>

