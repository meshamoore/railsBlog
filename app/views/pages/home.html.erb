<div>
    <% @posts.each do |p| %>
    	<div class="post">
        	<h4 class="post-name">
                <a href="<%= user_path(p.user.id) %>">
                    <div class="avatar">
                        <%= image_tag p.user.avatar.url(:thumb) %>
                    </div>
                </a>
            </h4>
        	<h4 class="post-title"><%= p.title %></h4>
            <p class="post-content"><%= p.content %></p>
    	</div>
    <% end %>
</div>

